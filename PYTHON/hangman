import random

def hangman():
    words = [
        "python", "banana", "computer", "programming", "hangman",
        "challenge", "keyboard", "internet", "university", "science"
    ]
    word = random.choice(words)
    guessed = set()
    wrong = 0
    max_wrong = 6

    print("ğŸ‰ í–‰ë§¨(Hangman) ê²Œì„ì— ì˜¤ì‹  ê²ƒì„ í™˜ì˜í•©ë‹ˆë‹¤! ğŸ‰")
    print(f"ì´ {max_wrong}ë²ˆì˜ ì˜¤ë‹µ ê¸°íšŒê°€ ìˆìŠµë‹ˆë‹¤. ë‹¨ì–´ë¥¼ ë§í˜€ ë³´ì„¸ìš”.\n")

    while wrong < max_wrong:
        # í˜„ì¬ ë‹¨ì–´ ìƒíƒœ í‘œì‹œ
        display = " ".join([c if c in guessed else "_" for c in word])
        print(f"ë‹¨ì–´: {display}")
        print(f"ë‚¨ì€ ê¸°íšŒ: {max_wrong - wrong}    ì‹œë„í•œ ë¬¸ì: {', '.join(sorted(guessed)) or 'ì—†ìŒ'}")

        guess = input("ë¬¸ì í•˜ë‚˜ë¥¼ ì…ë ¥í•˜ê±°ë‚˜ ì „ì²´ ë‹¨ì–´ë¥¼ ì¶”ì¸¡í•˜ì„¸ìš”: ").strip().lower()
        if not guess:
            print("ì…ë ¥ì´ ì—†ìŠµë‹ˆë‹¤. ë‹¤ì‹œ ì‹œë„í•´ì£¼ì„¸ìš”.\n")
            continue

        # í•œ ê¸€ì ì…ë ¥ ì²˜ë¦¬
        if len(guess) == 1:
            if guess in guessed:
                print("ì´ë¯¸ ì‹œë„í•œ ë¬¸ìì…ë‹ˆë‹¤.\n")
                continue
            guessed.add(guess)

            if guess in word:
                print("âœ… ë§ì•˜ìŠµë‹ˆë‹¤!\n")
                # ë‹¨ì–´ ì „ì²´ê°€ ë§ì¶°ì¡ŒëŠ”ì§€ í™•ì¸
                if all(c in guessed for c in word):
                    print(f"ğŸŠ ì¶•í•˜í•©ë‹ˆë‹¤! ë‹¨ì–´ë¥¼ ë§íˆì…¨ìŠµë‹ˆë‹¤: {word} ğŸŠ")
                    break
            else:
                wrong += 1
                print("âŒ í‹€ë ¸ìŠµë‹ˆë‹¤.\n")

        # ë‹¨ì–´ ì „ì²´ë¥¼ ì…ë ¥í•œ ê²½ìš°
        else:
            if guess == word:
                print(f"ğŸŠ ì¶•í•˜í•©ë‹ˆë‹¤! ë‹¨ì–´ë¥¼ ë§íˆì…¨ìŠµë‹ˆë‹¤: {word} ğŸŠ")
                break
            else:
                wrong += 1
                print("âŒ í‹€ë ¸ìŠµë‹ˆë‹¤.\n")
    else:
        print(f"ğŸ’¥ ê²Œì„ ì˜¤ë²„! ì •ë‹µì€ â€œ{word}â€ì˜€ìŠµë‹ˆë‹¤.")

if __name__ == "__main__":
    hangman()

